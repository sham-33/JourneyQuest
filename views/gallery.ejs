<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo Gallery - JourneyQuest</title>
    <link rel="stylesheet" href="/styles/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                <a href="/" class="navbar-brand">
                    <i class="fas fa-map-marked-alt"></i> JourneyQuest
                </a>
                
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <a href="/dashboard" class="btn btn-outline">Dashboard</a>
                    <a href="/" class="btn btn-outline">Home</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Gallery Header -->
    <div class="container" style="margin-top: 2rem;">
        <div class="card">
            <div class="text-center">
                <h1><i class="fas fa-images"></i> Travel Photo Gallery</h1>
                <p>Explore beautiful travel memories from around the world</p>
            </div>
        </div>
    </div>

    <!-- Photo Gallery -->
    <div class="container">
        <% if (users && users.length > 0) { %>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
                <% users.forEach(function(image) { %>
                    <div class="card">
                        <img src="/<%= image.image %>" alt="Travel Photo" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 1rem;">
                        <h4><%= image.country_code %></h4>
                        <p><i class="fas fa-user"></i> User ID: <%= image.user_id %></p>
                        <small><i class="fas fa-calendar"></i> <%= image.created_at || 'Recently uploaded' %></small>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="card text-center">
                <i class="fas fa-camera" style="font-size: 4rem; color: #ccc; margin-bottom: 1rem;"></i>
                <h3>No Photos Yet</h3>
                <p>Start uploading your travel photos to see them here!</p>
                <a href="/dashboard" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Upload Your First Photo
                </a>
            </div>
        <% } %>
    </div>

    <!-- Featured Countries Section -->
    <% if (ratings && ratings.length > 0) { %>
    <div class="container">
        <div class="card">
            <h3><i class="fas fa-star"></i> Highly Rated Destinations</h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
                <% ratings.forEach(function(country) { %>
                    <div style="padding: 1rem; background: #f8f9fa; border-radius: 8px;">
                        <h4><%= country.country_name %></h4>
                        <p><i class="fas fa-star" style="color: gold;"></i> Rating: <%= country.rating %>/5</p>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Footer -->
    <footer style="background: var(--dark-color); color: white; text-align: center; padding: 2rem 0; margin-top: 3rem;">
        <div class="container">
            <p>&copy; 2025 JourneyQuest. Explore the world through photos.</p>
        </div>
    </footer>
</body>
</html>
